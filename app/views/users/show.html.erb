<%= form_with model: @user do |form| %>
  <div class="form-group">
    <%= form.label :username, :for => 'username_field' %>
    <%= form.text_field :username, :type => 'text', :name => 'username', :id => 'username_field', :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :password, :for => 'password_field' %>
    <%= form.text_field :password, :type => 'password', :name => 'password', :id => 'password_field', :class => 'form-control' %>
  </div>
  <fieldset class="form-group">
    <legend>Role</legend>
    <div class="form-check">
    	<label class="form-check-label">
        <%= radio_button_tag :role, '2', (@user.role == 2 ? true : false), class: 'form-check-input' %>
        Trainer
      	</label>
    </div>
    <div class="form-check">
    	<label class="form-check-label">
        <%= radio_button_tag :role, '3', (@user.role == 3 ? true : false), class: 'form-check-input' %>
        User
      	</label>
    </div>
  </fieldset>
  <%= form.submit :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', users_path, :class => 'btn btn-danger' %>
<% end %>